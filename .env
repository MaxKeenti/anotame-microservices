# =========================================================
# ANOTAME MICROSERVICES - LOCAL ENVIRONMENT CONFIGURATION
# =========================================================

# --- DATABASE (anotame-db) ---
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_DB=anotame

# --- BACKEND SERVICES (identity, sales, catalog, operations) ---
# Database Connection
QUARKUS_DATASOURCE_JDBC_URL=jdbc:postgresql://anotame-db:5432/anotame
QUARKUS_DATASOURCE_USERNAME=admin
QUARKUS_DATASOURCE_PASSWORD=password

# Auth Cookie Configuration (Local Development)
# Set SECURE=false and SAME_SITE=LAX for HTTP/localhost
# Set SECURE=true and SAME_SITE=None for HTTPS/Production
ANOTAME_AUTH_COOKIE_SECURE=true
ANOTAME_AUTH_COOKIE_SAME_SITE=None

# CORS Configuration
QUARKUS_HTTP_CORS_ORIGINS=http://localhost:3000

# --- FRONTEND (anotame-web) ---
# Service URLs (Internal Docker Network)
NEXT_PUBLIC_IDENTITY_URL=http://identity-service:8081
NEXT_PUBLIC_CATALOG_URL=http://catalog-service:8082
NEXT_PUBLIC_SALES_URL=http://sales-service:8083
NEXT_PUBLIC_OPERATIONS_URL=http://operations-service:8084
