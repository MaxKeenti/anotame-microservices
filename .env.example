# =========================================================
# ANOTAME MICROSERVICES - ENVIRONMENT VARIABLES REFERENCE
# =========================================================

# --- DATABASE (anotame-db) ---
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_DB=anotame

# --- BACKEND SERVICES (identity, sales, catalog, operations) ---
# Note: In Railway, use variable references like ${{PostgreSQL.HOST}} instead of hardcoded values when possible.

# If using Railway Private Networking (not managed Postgres variables):
# Format: jdbc:postgresql://[PRIVATE_DOMAIN]:[PORT]/[DB_NAME]
# Example: jdbc:postgresql://anotame-db.railway.internal:5432/anotame
QUARKUS_DATASOURCE_JDBC_URL=jdbc:postgresql://anotame-db:5432/anotame
QUARKUS_DATASOURCE_USERNAME=admin
QUARKUS_DATASOURCE_PASSWORD=password

# Optional: Frontend URL for CORS (Add to each backend service)
# QUARKUS_HTTP_CORS_ORIGINS=https://your-frontend-domain.up.railway.app

# --- FRONTEND (anotame-web) ---
# Replace these with the actual "Public Domain" of your deployed services

NEXT_PUBLIC_IDENTITY_URL=https://identity-service-production.up.railway.app
NEXT_PUBLIC_CATALOG_URL=https://catalog-service-production.up.railway.app
NEXT_PUBLIC_SALES_URL=https://sales-service-production.up.railway.app
