                <img src="~/Content/Images/MaLuz.jpg" style="width: 200px; height: 200px; border-radius: 8px;" />
            </button>
            @*<a href="@Url.Action("Create","Nota")">
            <img src="~/Content/Images/MaLuz.jpg" style="width: 200px; height: 200px; border-radius: 8px;" />
        </a>*@
