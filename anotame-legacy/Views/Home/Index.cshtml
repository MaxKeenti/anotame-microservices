            <button type="button" id="btnPapureos" class="btn btn-primary" data-toggle="modal" data-target="#Login">
                <img src="~/Content/Images/Papureos.jpg" style="width: 200px; height: 200px; border-radius: 8px;" />
            </button>
            @*<a href="@Url.Action("Create","Nota")">
            <img src="~/Content/Images/Papureos.jpg" style="width: 200px; height: 200px; border-radius: 8px;" />
