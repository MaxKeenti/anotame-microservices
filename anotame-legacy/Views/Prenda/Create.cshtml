@model Anotame.Models.Prenda

@{
    ViewBag.Title = "Create";
}

@section misjava{
    <script src="~/Scripts/PrivateJavascripts/jsBusqPrendaTp.js"></script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class=" row">
        <div class="col-md-4 ">
            <div class="form-horizontal">
                <h2>Crear Prenda</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.idTipoPrenda, "Tipo de Prenda", htmlAttributes: new { @class = "control-label col-md-8" })
                    <div class="col-md-10">
                        @Html.DropDownList("idTipoPrenda", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.idTipoPrenda, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.idArreglo, "Arreglo", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("idArreglo", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.idArreglo, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    @Html.LabelFor(model => model.Cantidad, "Precio", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @*<input type="submit" value="Crear" class="btn btn-default" />*@
                        <button type="submit" class="btn btn-primary nticon">
                            <i id="icoSave" class="fas fa-save notaicon fa-3x"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 ">
            @{Html.RenderAction("Index", "Prenda");}
        </div>
    </div>
}

