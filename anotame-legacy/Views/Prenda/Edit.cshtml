@model Anotame.Models.Prenda

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Prenda</h2>
<h3>¿ESTÁ SEGURA DE EDITAR ESTO?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Prenda</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.idTipoPrenda, "Tipo de Prenda", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idTipoPrenda", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idTipoPrenda, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idArreglo, "Arreglo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idArreglo", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idArreglo, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Cantidad, "Precio", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary nticon btnEdiPrd">
                    <i id="icoEdit" class="fas fa-pen notaicon fa-2x"></i>
                </button>
                @*<input type="submit" value="Guardar" class="btn btn-default" />*@ |
                @{
                    var createUrl = Url.Action("Create");
                }
                <button type="button" class="btn btn-primary nticon btnBackPrd" data-url="@createUrl">
                    <i class="fas fa-undo-alt notaicon fa-2x"></i>
                </button>
                @*@Html.ActionLink("Cancelar", "Create")*@
            </div>
        </div>
    </div>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(".btnBackPrd").on("click", function () {
            var url = $(this).data("url");
            window.location.href = url;
        });
    });</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
