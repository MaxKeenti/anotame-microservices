@model Anotame.Models.Prenda

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar Prenda</h2>

<h3>¿ESTÁ SEGURA DE ELIMINAR ESTO?</h3>
<div>
    @*<h4>Prenda</h4>*@
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cantidad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Arreglo.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Arreglo.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TipoPrenda.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoPrenda.Nombre)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" class="btn btn-primary nticon btnDelPrd" value="Delete">
                <i id="icoDelete" class="fas fa-trash notaicon fa-2x"></i>
            </button>
            @*<input type="submit" class="btn btn-default" />*@ |
            @{
                var createUrl = Url.Action("Create");
            }
            <button type="button" class="btn btn-primary nticon btnBackPrd" data-url="@createUrl">
                <i class="fas fa-undo-alt notaicon fa-2x"></i>
            </button>
            @*@Html.ActionLink("Cancelar", "Create")*@
        </div>
    }
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(".btnBackPrd").on("click", function () {
            var url = $(this).data("url");
            window.location.href = url;
        });
    });</script>